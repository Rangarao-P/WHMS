@model List<WHMS_Project.Models.sp_ProductCartDetails_Result>
@{
    ViewBag.Title = "ProductCart";
    Layout = "~/Views/Shared/Layout_page.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <style>
        h5 {
            text-align: center;
            background-color: #005590;
            width: 300px;
            height: 20px;
            padding-top: 10px;
        }




        #products {
            margin: auto;
            background-color: lightgrey;
            width: 800px;
            height: 400px;
        }
    </style>
</head>
<body>
    <center>
        <h5>Product Cart</h5>
    </center>
    <div id="products">
        @if (Model.Count <= 0)
        {
            <center>
                <h3 class="text-danger">
                    Product Stock is Not Availble in the Ware House
                </h3>
            </center>
        }
        else
        {
            <center>
                <table id="locationtablecontainer">
                    <tr style="color:#005590;">
                        <th>S No.</th>
                        <th> Product Name </th>
                        <th>Product Code </th>
                        <th> Transfer Type </th>
                        <th> Temporary/Current Location </th>
                        <th> Robot Status </th>
                        <th> Scanned Location</th>
                        <th>Validation </th>
                    </tr>



                    @{int Counter = 0;}
                    @foreach (var item in Model)
                    {
                    <tr id="table-row">
                        <td>
                            @{ Counter++;}
                            @Counter
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            OutBound
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>Delivered</td>
                        <td>Rack53,shelf12</td>
                        <td>Invalid</td>
                    </tr>
                    }
                </table>
            </center>
        }
    </div>
</body>
</html>

