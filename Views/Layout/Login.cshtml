@model WHMS_Project.Models.User



@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">



    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">







    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>






    <title>Login</title>
    <style>





        #username ::  placeholder {
            color: darkgrey;
        }

        


        .CPP {
            color: white;
        }



        #password:: placeholder {
            color: darkgrey;
        }



        .btn btn-link btn-block mt-3 {
            color: white;
        }



        .LNUR {
            color: #34b67e;
        }


    </style>
</head>
<body style="background-image: url('../../Images/warehouse_bg.jpg'); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover; opacity: 1.0">
    <div class="container mt-5">
        <h1 style="color: #09f6e1; " class="text-center mb-5">WARE-YOU-GO</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h5 style="color: #09f6e1" ; class="text-center mb-4">Digitilization of Mordern Warehouses</h5>
                <div style="width : 500px; height: 480px; background :rgba(0,0,0,0.5); padding : 30px ;   ">
                    <center>
                        <span style="font-family:'Times New Roman'; font-size:20px; color:#b91212">@ViewBag.ErrorMessage</span>
                    </center>



                    @using (Html.BeginForm("Login", "Layout", FormMethod.Post))
                    {



                        <br /><br /><br />
                        <div class="form-group">
                            <input type="text" required style="border: none; border-bottom: white 2px dashed; background: rgba(0,0,0,0.1); text-align: center; color: white" class="form-control" id="username" name="username" placeholder="Enter your email/employee ID">
                        </div>
                        <div class="form-group">

                            <input type="password" required style="border: none; background: rgba(0,0,0,0.1); border-bottom: white 2px dashed; text-align: center; color: white" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <div class="form-group form-check">
                            <button type="submit" class="btn btn-primary" style="color: black; background :white; height: 40px; width: 120px;display: block; margin: auto;">LOGIN</button>

                            <input type="checkbox" id="rememberMe" style=" background :rgba(0,0,0,0.5);">
                            <label style="color:#1d76e4" class="form-check-label" for="rememberMe">Remember me</label>

                            <label style="float:none">
                                <p style="align-content:center ">@Html.ActionLink("Change Password", "ChangePassword", "Layout", null, new { @class = "btn btn-link btn-block mt-3" })</p>
                                @*<p style="align-content:center "> <a href="ChangePassword.cshtml" style="color:white" class="btn btn-link btn-block mt-3">Change password</a></p>*@
                            </label>
                            <label style="float:right">
                                @*<a href="Forgot Password.html" style="color: white" class="btn btn-link btn-block mt-3">Forgot Password</a>*@
                                <p style="align-content:center ">@Html.ActionLink("Forgot Password", "ForgotPassword", "Layout", null, new { @class = "btn btn-link btn-block mt-3" })</p>



                            </label>






                            <center>
                                @* <label> <u><a href="Request User Access.html" style="align-content:center; color: black" class="btn btn-link btn-block mt-3"><b>Request User Access</b></a></u></label>*@
                                @*<p style="align-content:center ">@Html.ActionLink("Request User Access", "RequestUserAccess", "Users", null, new { @class = "btn btn-link btn-block mt-3" })</p>*@
                                <p style="align-content:center "><label style="color : white"><strong><u>@Html.ActionLink("Request User Access", "RequestUserAccess", "Layout", null, new { @class = "LNUR" })</u></strong></label></p>



                            </center>
                            <center>
                                @*  <label> <u><a href="New User Registration.html" style="align-content:center; color: black" class="btn btn-link btn-block mt-3"><b>New User Registration</b></a></u></label>*@
                                <p style="align-content:center "><label style="color : white"><strong><u>@Html.ActionLink("New User Registration", "RegisterUser", "Layout", null, new { @class = "LNUR" })</u></strong></label></p>



                            </center>







                        </div>
                    }
                </div>
            </div>
        </div>
    </div>










</body>
</html>